<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}
  <div class="grid grid--3-cols">
    {% if rows -%}
        {{ rows }}
    {% elseif empty -%}
        {{ empty }}
    {% endif %}
  </div>
  {{ pager }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

</div>
