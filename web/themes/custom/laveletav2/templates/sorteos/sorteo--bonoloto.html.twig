<div class="wrapper">
  <article class="card draw">
        <h2>Bonoloto</h2>
    <span>{{ sorteo.field_combinacion_bonoloto }}</span>
    <span>{{ sorteo.id_sorteo }}</span>
    <span>{{ sorteo.nombre }}</span>
    <span>{{ sorteo.fecha }}</span>
    <span>{{ sorteo.dia_semana }}</span>
    <span>{{ sorteo.premio_bote }}</span>
    <span>{{ sorteo.apuestas }}</span>
    <span>{{ sorteo.recaudacion }}</span>
    <span>{{ sorteo.premios }}</span>
    <span>{{ sorteo.fondo_bote }}</span>
    <span>{{ sorteo.field_bola1 }}</span>
    <span>{{ sorteo.field_bola2 }}</span>
    <span>{{ sorteo.field_bola3 }}</span>
    <span>{{ sorteo.field_bola4 }}</span>
    <span>{{ sorteo.field_bola5 }}</span>
    <span>{{ sorteo.field_bola6 }}</span>
    <span>{{ sorteo.field_complementario }}</span>
    <span>{{ sorteo.field_reintegro }}</span>
    <span>{% for escru in sorteo.escrutinio %}
         {% for es in escru %}
         <p> {{ es.tipo }} - {{ es.categoria }} - {{ es.premio }} - {{ es.ganadores }}</p>
        {% endfor %}
        {% endfor %}
    </span>
  </article>
</div>