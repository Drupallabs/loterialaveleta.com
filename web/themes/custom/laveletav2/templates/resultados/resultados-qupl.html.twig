<div class="subhome-hero subhome-hero--quintuple">
	<div class="wrapper">
		<div class="subhome-hero__texts">
			
			<h1 class="subhome-hero__title"><span class="subhome-hero__game game"></span><span class="title-text">Quintuple Plus</span></h1>
			<div class="subhome-hero__buttons">
				<a title="Jugar al Quintuple Plus en la pagina de Loterias" href="https://juegos.loteriasyapuestas.es/jugar/cas/configuracion/club_conmigo_online/95005/QUPL" target="_blank" class="btn btn--outline subhome-hero__btn">Jugar ya</a>
			</div>
      {% if proximo %}
			<div class="subhome-hero__info"><small>Próximo sorteo: {{ proximo }}</small></div>
      {% endif %}
		</div>
	</div>
</div>
<section id="results" class="section results">
  <div class="wrapper">
    <div class="section__main">
      <section class="section__subsection">
        <div class="results__section__container">
          <div class="results__section__content">
          <div class="grid grid--3-cols">
            {% for qupl in qupls %}
                <article class="card draw">
                <header class="card__header">
                  <h3 class="card__title">
                    <img src="{{ base_path }}themes/custom/laveletav2/images/logos/quintuple.svg" alt="Quintuple Plus" class="game__logo">
                  </h3>
                  <p class="card__date">{{ qupl.dia_semana }}, {{ qupl.fecha_sorteo|date('d/m/Y') }}</p>
                </header>
                <div class="card__main">
                  <table class="draw__table">
                    <thead>
                      <tr>
                        <th>
                          <span>Carrera</span>
                        </th>
                        <th>Ganador</th>
                      </tr>
                    </thead>
                   <tbody>
                         <tr>
                             <td><span>Carrera 1</span></td><td>{{ qupl.bola1 }}</td>
                          </tr>
                          <tr>
                             <td><span>Carrera 2</span></td><td>{{ qupl.bola2 }}</td>
                          </tr>
                          <tr>
                             <td><span>Carrera 3</span></td><td>{{ qupl.bola3 }}</td>
                          </tr>
                          <tr>
                             <td><span>Carrera 4</span></td><td>{{ qupl.bola4 }}</td>
                          </tr>
                          <tr>
                             <td><span>Carrera 5</span></td><td>{{ qupl.bola5 }}</td>
                          </tr>
                        <tr><td><span>Carrera 5 (2º)</span></td><td>{{ qupl.bola6 }}</td></tr>
                    </tbody>
                  </table>
                </div>
                <footer class="card__footer">
                  <a title="Jugar al Quintuple Plus en la pagina de Loterias" href="https://juegos.loteriasyapuestas.es/jugar/cas/configuracion/club_conmigo_online/95005/QUPL" target="_blank" class="btn btn--primary card__btn-primary">Jugar ya</a>
                  <a href="#results-pop-up-qupl-{{ loop.index }}" class=" pop-up-trigger card__btn-secondary">Detalle premios</a>
                </footer>
               </article>
                 <aside id="results-pop-up-qupl-{{ loop.index }}" class="pop-up"> <!-- QUINTUPLE PLUS -->
                    <div class="pop-up__wrapper"><div class="pop-up__content">
                      <article class="card">
                          <header class="card__header"></header>
                          <div class="card__main">
                            <table class="table"><thead>
                                <tr><th>Tipo</th><th>Categoria</th><th>Premio</th><th>Ganadores</th></tr>
                              </thead>
                              <tbody>
                              {% set escrutinio = qupl.escrutinio | unserialize %}
                              {% for escru in escrutinio %}
                                {% for e in escru %}
                              <tr>
                                  <td>{{ e.tipo }}</td>
                                  <td>{{ e.categoria }}</td>
                                  <td>{{ e.premio|number_format }}</td>
                                  <td>{{ e.ganadores|number_format }}</td>
                              </tr>
                              {% endfor %}{% endfor %}
                              </tbody></table>
                              <table class="tabla-recaudacion">
                                <tr>
                                  <th>Apuestas Recibidas</th><td>{{ qupl.apuestas|number_format }}</td>
                                  <th>Bote Ofrecido</th><td>{{ qupl.premio_bote|number_format }}€</td>
                                </tr>
                                <tr>
                                  <th>Recaudaci&oacute;n</th><td>{{ qupl.recaudacion|number_format }}€</td>
                                  <th>Premios</th><td>{{ qupl.premios|number_format }}€</td>
                                </tr>
                              </table>
                          </div>
                        </article>
                      </div>
                      <a href="#results-pop-up" class="pop-up__btn-close"><span class="icon-clearclose"></span></a>
                    </div>
                  </aside>
            {% endfor %}
          </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>